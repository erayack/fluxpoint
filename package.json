{
  "name": "modern-product-repo",
  "private": true,
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "lint": "pnpm lint:oxlint && pnpm lint:eslint",
    "lint:oxlint": "oxlint . --deny-warnings --config packages/tooling/oxlint.json",
    "lint:eslint": "eslint . --config packages/tooling/eslint.config.js",
    "test": "vitest -c packages/tooling/vitest.config.ts"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "@oxlint/darwin-arm64"
    ],
    "peerDependencyRules": {
      "ignoreMissing": [
        "svelte"
      ]
    }
  },
  "devDependencies": {
    "@effect/eslint-plugin": "^0.3.2",
    "@typescript-eslint/utils": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-oxlint": "^0.1.0",
    "eslint-plugin-svelte": "^3.14.0",
    "oxlint": "^1.41.0",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "^4.0.17"
  }
}
